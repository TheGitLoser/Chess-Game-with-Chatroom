extends layout

block content

  #banner.jumbotron
    .container
      h1 Socket.IO Chess
      p.
        A real-time multi-player chess app using
        <a href="http://nodejs.org">Node.js</a>,
        <a href="http://expressjs.com">Express</a>, and of course
        <a href="http://socket.io">Socket.IO</a>.

      p.
        <a class="btn btn-primary" href="https://github.com/thebinarypenguin/socket.io-chess">
        View project on GitHub
        </a>

  .container
    .row
      .col-sm-6
        h2 Start a New Game
        form#startForm(action="/start", method="POST", role="form")
          .form-group
            label Play as
            div
              .btn-group(data-toggle="buttons")
                label.btn.btn-default.active
                  input(type="radio", name="player-color", value="white", checked="checked")
                  | White
                label.btn.btn-default
                  input(type="radio", name="player-color", value="black")
                  | Black
          .form-group
            label(for="playerName") Player Name
            input#playerName.form-control(type="text", name="player-name", value="Player 1", required=)
          .form-group
            label(for="roomName") Room Name
            input#playerName.form-control(type="text", name="roomName", value="Room Name", required=)
          button.btn.btn-primary(type="submit") Start Game
      .col-sm-6
        h2 Join an Existing Game
        form#joinForm(action="/join", method="POST", role="form")

          script
            var roomInfo = !{JSON.stringify(roomInfo)};

          .form-group
            label Room name
            select#room(name='game-id').form-control
              if roomInfo
              each value, roomId in roomInfo
                option(value='#{roomId}') #{value.name}
              else
                option(value='')  No room available 

          .form-group
            label(for="playerName") Player Name
            input#playerName.form-control(type="text", name="player-name", value="Player 1", required=)
          button.btn.btn-primary(type="submit") Join Game

  script(src="/js/jquery.min.js")
  script(src="/js/bootstrap.min.js")